{% extends 'base.html.twig' %}

{%  block header %}
    <header class="landing-header">
        <div class="container">
            <nav class="navbar navbar-expand-lg rounded-3" >
                <div class="container">
                    <a class=" d-none d-sm-block navbar-brand" href="{{ path('LogIn') }}">
                        <img src="{{ asset('/public/assets/logo.png') }}" alt="bookbinderlogo" width="200">
                    </a>
                    <button class="navbar-toggler bg-white"  type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                        <div class="navbar-nav" id="nav">
                            <a class="nav-link active" aria-current="page" href="{{ path('LogIn') }}">LogIn</a>
                            <a class="nav-link " href="{{ path('SignUp') }}">SignUp</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div class="landing-main px-4">
        <div class="container">
            <div class="row justify-content-between">
                <div class="d-none d-sm-block col-lg-5 mb-3 landing-main-left bg-white">
                    <h1 id="login_top_trending" class="p-4" style="color: rgb(49,30,105);">Top Trending Books</h1>
                        <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active text-center" data-bs-interval = "10000">
                                    <img class="rounded-3 w-50 book-image p-4" style="align-items: center; justify-content: center" data-isbn="{{ first_book.isbn }}" src="{{ asset('/public/assets/no_cover.jpg') }}" alt="BookCover">
                                    <div class="d-5 d-md-block ">
                                        <h5 class="booktitle" style="color: rgb(49,30,105); text-align: center">{{ first_book.title }}</h5>
                                        <h6 class="bookauthor" style="color: rgb(49,30,105); text-align: center">{{ first_book.author }}</h6>
                                        <p class="bookgenres"  style="color: rgb(49,30,105); text-align: center">Book followers: {{ first_book.number_of_followers }}</p>
                                    </div>
                                </div>
                                <div class="carousel-item text-center" data-bs-interval="2000">
                                    <img class="rounded-3 w-50 book-image p-4" style="align-items: center; justify-content: center" data-isbn="{{ second_book.isbn }}" src="{{ asset('/public/assets/no_cover.jpg') }}" alt="BookCover">
                                    <div class="d-5 d-md-block ">
                                        <h5 class="booktitle" style="color: rgb(49,30,105); text-align: center">{{ second_book.title }}</h5>
                                        <h6 class="bookauthor" style="color: rgb(49,30,105); text-align: center">{{ second_book.author }}</h6>
                                        <p class="bookgenres"  style="color: rgb(49,30,105); text-align: center">Book followers: {{ second_book.number_of_followers }}</p>
                                    </div>
                                </div>
                                <div class="carousel-item text-center">
                                    <img class="rounded-3 w-50 book-image p-4" style="align-items: center; justify-content: center" data-isbn="{{ third_book.isbn }}" src="{{ asset('/public/assets/no_cover.jpg') }}" alt="BookCover">
                                    <div class="d-5 d-md-block ">
                                        <h5 class="booktitle" style="color: rgb(49,30,105); text-align: center">{{ third_book.title }}</h5>
                                        <h6 class="bookauthor" style="color: rgb(49,30,105); text-align: center">{{ third_book.author }}</h6>
                                        <p class="bookgenres"  style="color: rgb(49,30,105); text-align: center">Book followers: {{ third_book.number_of_followers }}</p>
                                    </div>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>

                <div class="col-lg-5 landing-main-right landing-welcome">
                    <h1 class="WelcomeLbl"> Welcome </h1>
                    <p class="WelcomeP"> Please enter your username and password</p>
                    {% if error %}
                        <div id="flash">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                        <form action="{{ path('LogIn') }}" method="post">
                            <div class="mb-3">
                                <label style="color: rgb(49,30,105)" for="username" class="form-label">User Name:</label>
                                <input type="text" class="form-control align-self-center w-100"  id="username" name="_username" value="{{ last_username }}" required>
                            </div>
                            <div class="mb-3">
                                <label style="color: rgb(49,30,105)" for="password" class="form-label">Password:</label>
                                <input class="form-control align-self-center" type="password" id="password" name="_password" required>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                             {#If you want to control the URL the user is redirected to on success#}
                            <input type="hidden" name="_target_path" value="/Home">
                            <div class="BtnGroups">
                                <button id='submit_login' class="BookBtns" type="submit">Login</button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% set footer_class = 'landing-footer' %}
{% block footer %}
    <footer class="{{ footer_class }}">
        <div>Copyright Â© 2022 WebTech. KUL All rights Reserved.</div>
        <div><a href="{{ path('privacypolicy') }}" style="color: rgb(49,30,105) ">  Privacy Policy</a> | <a href="{{ path('termsofservice') }}" style="color: rgb(49,30,105) "> Terms of Use</a></div>
    </footer>
{% endblock %}
