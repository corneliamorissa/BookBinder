        <div class="landing-welcome">
            <h1 class="signUpLbl"> Sign Up </h1>
            <p class="signUpLbl2"> Please enter the required information</p>
            <div class="form">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}

