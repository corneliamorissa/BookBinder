{% extends 'base.html.twig' %}
{% block stylesheet%} <link href="{{ asset('css/SignUp.css') }}" rel="stylesheet" /> {% endblock %}
{%  block header %}
    <header class="landing-header">
        <div class="logo">
            <img id="logo" src="{{ asset("assets/logo.png") }}" alt="bookbinder">
        </div>
        <div id="nav">
            <a href="{{ path('LogIn') }}">LogIn</a>
            <a href="{{ path('SignUp') }}">SignUp</a>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div class="landing-main">
        <div class="landing-welcome">
            <h1 style="color: #311E69; text-align: center"> Sign Up </h1>
            <p style=" color: #808088; text-align: center; font-weight: bold"> Please enter the required information</p>
