{% extends 'base.html.twig' %}
{% block stylesheet%}
    {{ parent() }}
    <link href="{{ asset('css/SignUp.css') }}" rel="stylesheet">
{% endblock %}
{#Header updated with bootstrap#}
{%  block header %}
    <header class="landing-header">
        <div class="container">
            <nav class="navbar navbar-expand-lg rounded-3" >
                <div class="container">
                    <a class="navbar-brand" href="{{ path('LogIn') }}">
                        <img src="{{ asset('/public/assets/logo.png') }}" alt="bookbinderlogo" width="200">
                    </a>
                    <button class="navbar-toggler bg-white"  type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                        <div class="navbar-nav" id="nav">
                            <a class="nav-link active" aria-current="page" href="{{ path('LogIn') }}">LogIn</a>
                            <a class="nav-link " href="{{ path('SignUp') }}">SignUp</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div class="landing-m px-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="landing-wel col-lg-6 mb-3 bg-white">
                    <h1 class="signUpLbl text-center pt-3"> Sign Up </h1>
                    <p class="signUpLbl2 text-center"> Please enter the required information</p>
                    <div class="pt-4 pb-4">
                        {{ form_start(form) }}
                        <div class="custom-form">
                            <div style="width: 400px;">
                                <div style="display: grid; grid-template-columns: auto auto auto; align-items: center">
                                    {% for choice in form.avatar %}
                                        <div class="form-check" style="padding: 20px">
                                            {{ form_widget(choice, {'attr': {'class': 'form-check-input avatar-choice form-input', 'id': 'avatar-' ~ loop.index}}) }}
                                            <label class="form-check-label" for="avatar-{{ loop.index }}">
                                                {% if choice.vars['attr']['data-image-url'] is defined %}
                                                    <img src="{{ choice.vars['attr']['data-image-url'] }}" alt="Avatar" style="width: 50px; height: 50px;">
                                                {% endif %}
                                                {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.avatar) }}
                            </div>
                            {{ form_row(form.username) }}
                            <p id="message_check" style="color: rgb(139,0,0)"></p>
                            {{ form_row(form.password) }}
                            {{ form_row(form.first_name) }}
                            {{ form_row(form.last_name) }}
                            {{ form_row(form.birthdate) }}
                            {{ form_row(form.street) }}
                            {{ form_row(form.house_number) }}
                            {{ form_row(form.postcode) }}
                            {{ form_row(form.terms_and_condition) }}
                        </div>
                        <div class="custom-form-signup">
                            {{ form_row(form.submit) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{#No bootstrap required here#}
