{% extends 'base.html.twig' %}
{% block title %} <title> BookBinder </title>{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('css/Book.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card rounded-3 mb-sm-4 justify-content-sm-center" style="width: 350px; border-color: #6f42c1">
                    <img id="BookPic" class="rounded-3 w-100" src="" alt="BookCover">
                    <div class="card-body text-center">
                        <h1 id="BookTitle" class="card-title"> Title loading </h1>
                        <h3 id="nrOfFollowers"> {{ nrFollowers }} Followers </h3>
                        <p id="BookAuthor"> Name Loading </p>
                        <p id="BookDetails" class="BookDetails">
                            Number of pages : {{ pages }} <br>
                            ISBN: {{ isbn }} <br>
                            Rating : {{ rating}} <br>
                            Library : {{ library }} <br>
                        </p>
                        <div class="btn-group buttons">
                            {% if ff == 1 %}
                                <input type="submit" value="Unfollow Book" name="UnfollowBook" class="BookBtns" id="UnfollowBook">
                            {% else %}
                                {{ form_start(form1) }}
                                {{ form_row(form1.bookid, {'attr': {'value': bookid}}) }}
                                {{ form_row(form1.userid, {'attr': {'value': userid }}) }}
                                {{ form_row(form1.Follow) }}
                                {{ form_end(form1) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 ms-lg-5">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="container">
                    <h1 class="text-center"> What book lovers say about "{{ title }}" ? </h1>
                    <ul class="book_reviews">
                        {% if display is not empty %}
                            {% for item in display %}
                                <li>{{ item.text }} <strong> ~{{ item.author }} </strong> <br></li>
                                {#We can display the rate by adding {{ item.rate }} and making the appropriate vhanges to the function getReviewBasedOnBookName#}
                            {% endfor %}
                        {% else %}
                            <h6> No feedback is given for {{ title }} yet. Be the first one!</h6>
                        {% endif %}
                    </ul>
                    <h2 class="text-center"> Give review for the book</h2>
                        {{ form_start(form) }}
                        {{ form_row(form.author, {'attr': {'value': last_username}}) }}
                        {{ form_row(form.book, {'attr': {'value': title}}) }}
                        {{ form_row(form.text) }}
                        {{ form_row(form.rate) }}
                        {{ form_row(form.Submit) }}
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset('javascript/api.js') }}"></script>
    <script>fetch_details('{{ isbn }}');</script>

{% endblock %}