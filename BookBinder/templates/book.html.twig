{% extends 'base.html.twig' %}
{% block title %} <title> BookBinder </title>{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('css/Book.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card rounded-3 mb-sm-4 justify-content-sm-center Book-border">
                    <img id="BookPic" class="rounded-3 w-100" src="{{ asset('/public/assets/no_cover.jpg') }}" alt="BookCover">
                    <div class="card-body text-center">
                        <h1 id="BookTitle" class="card-title"> Title loading </h1>
                        <h3 id="nrOfFollowers"> {{ BookNrOfFollowers }} Followers </h3>
                        <p id="BookAuthor"> Name Loading </p>
                        <p id="BookDetails" class="BookDetails">
                            Number of pages : {{ BookNrOfPages }} <br>
                            ISBN: {{ BookIsbn }} <br>
                            Rating : {{ BookRating }} <br>
                            Library : {{ LibraryName }} <br>
                        </p>
                        <div class="btn-group buttons">
                            {% if UserFollowsBookBoolean == 1 %}
                                {{ form_start(UnfollowBookForm) }}
                                {{ form_end(UnfollowBookForm) }}
                            {% else %}
                                {{ form_start(FollowBookForm) }}
                                {{ form_row(FollowBookForm.bookid, {'attr': {'value': BookId}}) }}
                                {{ form_row(FollowBookForm.userid, {'attr': {'value': UserId }}) }}
                                {{ form_row(FollowBookForm.Follow) }}
                                {{ form_end(FollowBookForm) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 ms-lg-5">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="container">
                    <h1 class="text-center"> What book lovers say about "{{ BookTitle }}" ? </h1>
                    <ul class="book_reviews">
                        {% if ReviewsPerBook is not empty %}
                            {% for item in ReviewsPerBook %}
                                <li>{{ item.text }} <strong> ~{{ item.author }} </strong> <br></li>
                                {#We can display the rate by adding {{ item.rate }} and making the appropriate vhanges to the function getReviewBasedOnBookName#}
                            {% endfor %}
                        {% else %}
                            <h6> No feedback is given for {{ BookTitle }} yet. Be the first one!</h6>
                        {% endif %}
                    </ul>
                    <h2 class="text-center"> Give review for the book</h2>
                        {{ form_start(ReviewForm) }}
                        {{ form_row(ReviewForm.author, {'attr': {'value': last_username}}) }}
                        {{ form_row(ReviewForm.book, {'attr': {'value': BookTitle}}) }}
                        {{ form_row(ReviewForm.text) }}
                        {{ form_row(ReviewForm.rate) }}
                        {{ form_row(ReviewForm.Submit) }}
                        {{ form_end(ReviewForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
<script src="{{ asset('javascript/api.js') }}"></script>
<script>fetch_details('{{ BookIsbn }}');</script>
{% endblock %}